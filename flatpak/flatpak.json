{
  "id": "org.radiotube.vtun-ng",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "25.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin"
  },
  "command": "vtunngd",
  "finish-args": [
    "--share=network",
    "--socket=system-bus",
    "--device=all",
    "--filesystem=host"
  ],
  "modules": [
    {
      "name": "vtun-ng",
      "buildsystem": "simple",
      "build-commands": [
        "cargo build --frozen --release",
        "install -Dm755 target/release/vtunngd \"${FLATPAK_DEST}/bin/vtunngd\""
      ],
      "sources": [
        {
          "type": "dir",
          "path": ".."
        },
        "cargo-sources.json",
        {
          "type": "inline",
          "dest": ".cargo",
          "dest-filename": "config.toml",
          "contents": "[source.crates-io]\nreplace-with = \"vendored\"\n\n[source.vendored]\ndirectory = \"cargo/vendor\""
        }
      ]
    }
  ]
}

